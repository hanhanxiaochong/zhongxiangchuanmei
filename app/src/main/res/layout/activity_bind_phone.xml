<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_topview"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:orientation="vertical"
        android:background="#FBFBFB"
        android:gravity="center">
        
        <TextView
            android:id="@+id/txt_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_blue"
            android:textSize="60px"
            android:textStyle="bold"
            android:text="15834026500"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前手机号"
            android:textSize="40px"
            android:textColor="@color/btn_blue"
            android:layout_marginTop="30px"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+86"
            android:gravity="right"
            android:textSize="48px"
            android:textColor="@color/txt_black"/>

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="36px"
            android:paddingLeft="24px"
            android:layout_marginLeft="20px"
            android:textColorHint="@color/txt_dark_gray"
            android:textColor="@color/txt_black"
            android:inputType="number"
            android:maxLength="11"
            android:hint="请输入您需要绑定的手机号"/>

        <TextView
            android:id="@+id/txt_get_yanzhengma"
            android:layout_width="0px"
            android:layout_weight="2"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@color/green"
            android:background="@drawable/bg_txt_yanzheng_green"
            android:layout_marginTop="30px"
            android:layout_marginLeft="24px"
            android:layout_marginBottom="30px"
            android:layout_marginRight="48px"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:gravity="right"
            android:textSize="48px"
            android:textColor="@color/txt_black"/>

        <EditText
            android:id="@+id/et_yanzheng"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textSize="36px"
            android:paddingLeft="24px"
            android:layout_marginLeft="12px"
            android:layout_marginRight="48px"
            android:textColorHint="@color/txt_dark_gray"
            android:textColor="@color/txt_black"
            android:hint="请输入验证码"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginRight="48px"
        android:layout_marginLeft="48px"
        android:layout_marginTop="80px"
        android:text="确定"
        android:textSize="50px"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_blue"/>

</LinearLayout>