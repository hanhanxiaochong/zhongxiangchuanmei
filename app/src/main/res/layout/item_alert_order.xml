<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txt_projectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目名称"
        android:textStyle="bold"
        android:textSize="60px"
        android:textColor="@color/txt_black"
        android:layout_marginLeft="48px"
        android:layout_marginTop="48px"/>


    <TextView
        android:id="@+id/txt_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="顾客名字（顾客手机号）"
        android:textColor="@color/txt_black"
        android:textSize="52px"
        android:layout_marginLeft="48px"
        android:layout_marginTop="28px"/>

    <TextView
        android:id="@+id/txt_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号：4868208709"
        android:textColor="@color/txt_dark_gray"
        android:layout_marginLeft="48px"
        android:layout_marginTop="28px"/>

    <TextView
        android:id="@+id/txt_order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单状态：待支付"
        android:textColor="@color/txt_dark_gray"
        android:layout_marginLeft="48px"
        android:layout_marginTop="18px"/>

    <TextView
        android:id="@+id/txt_order_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预定手机：15834026500"
        android:textColor="@color/txt_dark_gray"
        android:layout_marginLeft="48px"
        android:layout_marginTop="18px"/>

    <TextView
        android:id="@+id/txt_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下单时间：2018-05-02 16:48"
        android:textColor="@color/txt_dark_gray"
        android:layout_marginLeft="48px"
        android:layout_marginTop="18px"
        android:layout_marginBottom="48px"/>

</LinearLayout>