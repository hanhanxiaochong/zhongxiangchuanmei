<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:focusableInTouchMode="false"
              android:focusable="false"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_topview"/>

    <LinearLayout
        android:id="@+id/ll_update_userhead"
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_userhead"
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@mipmap/icon_qq"
            android:layout_marginLeft="48px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="42px"
            android:textColor="@color/txt_dark_gray"
            android:layout_marginLeft="120px"
            android:text="修改头像"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="48px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_right"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40px"
            android:gravity="center_vertical"
            android:paddingLeft="48px"
            android:textColor="@color/txt_dark_gray"
            android:text="昵称"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textSize="40px"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:paddingRight="48px"
            android:textColor="@color/txt_dark_gray"
            android:hint="不超过8个字符"
            android:layout_weight="3"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40px"
            android:gravity="center_vertical"
            android:paddingLeft="48px"
            android:textColor="@color/txt_dark_gray"
            android:text="性别"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_female"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="女"
                android:textSize="40px"
                android:checked="true"
                android:layout_marginLeft="30px"
                android:textColor="@color/txt_dark_gray"/>

            <CheckBox
                android:id="@+id/cb_male"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="男"
                android:textSize="40px"
                android:textColor="@color/txt_dark_gray"
                android:layout_marginLeft="30px"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40px"
            android:gravity="center_vertical"
            android:paddingLeft="48px"
            android:textColor="@color/txt_dark_gray"
            android:text="年龄"/>

        <LinearLayout
            android:id="@+id/ll_update_age"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="48px"
                android:textColor="@color/txt_dark_gray"
                android:text="20~25岁"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="48px"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40px"
            android:gravity="center_vertical"
            android:paddingLeft="48px"
            android:textColor="@color/txt_dark_gray"
            android:text="地区"/>

        <LinearLayout
            android:id="@+id/ll_update_area"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="48px"
                android:textColor="@color/txt_dark_gray"
                android:text="北京市"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="48px"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"/>

    <EditText
        android:id="@+id/et_user_sign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="48px"
        android:gravity="start"
        android:textSize="40px"
        android:background="@color/white"
        android:textColor="@color/txt_dark_gray"
        android:hint="修改个性签名"/>

</LinearLayout>