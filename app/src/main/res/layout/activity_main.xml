<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hanhanxiaochong.zhongxiangchuanmei.widget.CustomViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_bottom_btn"/>
    
    <RadioGroup
        android:id="@+id/main_bottom_btn"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_height="180px"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/select_icon_home"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/rb_shop"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/select_icon_shop"
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/rb_order"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/select_icon_order"
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/rb_my"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/select_icon_my"
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"/>

    </RadioGroup>

</RelativeLayout>
