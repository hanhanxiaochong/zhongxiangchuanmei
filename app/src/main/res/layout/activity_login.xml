<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="48px"
            android:textColor="@color/txt_black"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/txt_regist"
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:textSize="48px"
            android:textColor="@color/txt_black"
            android:text="注册"
            android:paddingRight="48px"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <LinearLayout
            android:id="@+id/ll_qq_login"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginLeft="100px"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_qq"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:layout_marginTop="20px"
                android:textSize="34px"
                android:textColor="@color/txt_dark_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wechat_login"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:layout_marginTop="20px"
                android:textSize="34px"
                android:textColor="@color/txt_dark_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alipay_login"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_alipay"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:layout_marginTop="20px"
                android:textSize="34px"
                android:textColor="@color/txt_dark_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sina_login"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginRight="100px"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_weibo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新浪微博"
                android:layout_marginTop="20px"
                android:textSize="34px"
                android:textColor="@color/txt_dark_gray"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_login_way"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center"
        android:layout_marginBottom="50px"
        android:text="点击使用验证码登录"
        android:textStyle="bold"
        android:textSize="36px"
        android:textColor="@color/pink"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="0px"
            android:layout_weight="3.5"
            android:hint="手机号"
            android:paddingLeft="50px"
            android:background="@drawable/bg_et_input"
            android:textSize="38px"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/txt_yanzheng"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="验证"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/bg_btn_yanzheng"
            android:layout_marginLeft="20px"
            android:textColor="@color/pink"
            android:textSize="38px"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="50px"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"
        android:hint="密码"
        android:paddingLeft="50px"
        android:background="@drawable/bg_et_input"
        android:textSize="38px"/>

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/bg_btn_login"
        android:text="登录"
        android:gravity="center"
        android:textSize="38px"
        android:textColor="@color/white"
        android:layout_marginTop="100px"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"/>
</LinearLayout>