<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/layout_topview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_black"
        android:layout_marginTop="48px"
        android:layout_marginLeft="48px"
        android:text="请输入您的姓名"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="96px"
        android:layout_marginRight="96px"
        android:paddingLeft="24px"
        android:background="@null"
        android:textSize="54px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="96px"
        android:layout_marginRight="96px"
        android:background="@color/txt_black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_black"
        android:layout_marginTop="80px"
        android:layout_marginLeft="48px"
        android:text="请输入您的身份证号码"/>

    <EditText
        android:id="@+id/et_idcard_number"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="96px"
        android:layout_marginRight="96px"
        android:paddingLeft="24px"
        android:background="@null"
        android:textSize="54px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="96px"
        android:layout_marginRight="96px"
        android:background="@color/txt_black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_black"
        android:layout_marginTop="80px"
        android:layout_marginLeft="48px"
        android:text="请输上传身份证正反面照片"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal"
        android:layout_marginTop="48px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px">

        <TextView
            android:id="@+id/txt_front_side"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="50px"
            android:background="@drawable/bg_add_idcard"
            android:textColor="@color/txt_dark_gray"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_back_side"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="50px"
            android:background="@drawable/bg_add_idcard"
            android:textColor="@color/txt_dark_gray"
            android:layout_marginLeft="48px"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginRight="48px"
        android:layout_marginLeft="48px"
        android:layout_marginTop="80px"
        android:text="确定"
        android:textSize="50px"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_blue"/>
</LinearLayout>