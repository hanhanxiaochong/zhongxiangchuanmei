<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/layout_topview"/>
    <LinearLayout
        android:id="@+id/layout_addressyes"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_address"
            android:layout_above="@+id/btn_addaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_addressno"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="48px"
            android:textColor="@color/txt_dark_gray"
            android:text="还没有创建收货地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_down_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即创建"
            android:textColor="@color/white"
            android:textSize="48px"
            android:paddingTop="30px"
            android:paddingRight="80px"
            android:paddingLeft="80px"
            android:paddingBottom="30px"
            android:layout_marginTop="50px"
            android:background="@drawable/bg_addaddress"/>
    </LinearLayout>
</LinearLayout>