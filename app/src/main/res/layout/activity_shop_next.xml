<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_left"
                android:layout_marginLeft="48px"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_home_search"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginBottom="15px"
            android:layout_marginTop="15px"
            android:layout_weight="6"
            android:gravity="center"
            android:background="@drawable/bg_search_et"
            android:hint="搜索商品 分类 功效"
            android:drawableLeft="@mipmap/icon_search"
            android:drawablePadding="15px"
            android:paddingLeft="35px"
            android:textColorHint="@color/txt_gray"
            android:textSize="36px"
            android:textColor="@color/txt_black"/>

        <ImageView
            android:id="@+id/img_home_msg"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/icon_home_msg"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_first"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_second"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>

</LinearLayout>