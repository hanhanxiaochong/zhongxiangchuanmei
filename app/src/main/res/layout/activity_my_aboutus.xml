<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_topview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="品牌介绍"
        android:gravity="center"
        android:layout_marginLeft="96px"
        android:textColor="@color/txt_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@mipmap/icon_qq"
            android:layout_marginLeft="96px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="48px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="众享创美"
                android:textColor="@color/txt_black"
                android:textSize="66px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48px"
                android:text="联系电话：88888888"
                android:layout_marginTop="48px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textColor="@color/txt_gray"
                android:lineSpacingExtra="8px"
                android:text="集团介绍文案集团介绍文案集团介绍文案集团介绍文案集团介绍文案集团介绍文案集团介绍文案"/>

        </LinearLayout>
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"
        android:layout_margin="48px"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发展历程"
        android:textSize="52px"
        android:textColor="@color/txt_black"
        android:layout_marginLeft="96px"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_aboutus"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>